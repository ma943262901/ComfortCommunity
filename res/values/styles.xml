<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="main_tab_bottom">
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:paddingTop">3dip</item>
        <item name="android:drawablePadding">5dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1.0</item>
        <!-- <item name="android:background">@drawable/main_view_color</item> -->
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_normal_style">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="sign_text_style">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:drawableLeft">@drawable/text_sign_icon</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="seekBarMyStyle" parent="android:style/Widget.SeekBar">
        <item name="android:progressDrawable">@drawable/seekbar_bg </item>
        <item name="android:maxHeight">5dip</item>
        <item name="android:minHeight">5dip</item>
        <item name="android:thumb">@drawable/thumb_selector</item>
    </style>

